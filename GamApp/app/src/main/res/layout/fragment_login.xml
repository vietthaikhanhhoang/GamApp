<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.fragmentcustom.LoginFragment"
    >

<!-- TODO: Update blank fragment layout -->
<LinearLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:padding="10dp"
    >

    <ImageView
        android:src="@drawable/app_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="Cho ảnh vào đây" />
    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập để có thể bình luận bài viết và thể hiện cảm xúc" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
        <Button
            android:textAllCaps = "false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập bằng Facebook"
            android:id="@+id/btnLoginFacebook"
            />
        <Button
            android:textAllCaps = "false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập bằng Zalo"
            android:id="@+id/btnLoginApple"
            />
    </LinearLayout>
</LinearLayout>



</FrameLayout>