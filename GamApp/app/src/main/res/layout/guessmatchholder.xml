<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#E5E5EA"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Sân: Anfield"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtGiai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="Premier League"
            android:textAlignment="textEnd"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutCenter"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imgHome"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Liverpool"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgHome"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/txtTime"
            android:src="@drawable/app_icon">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#EDEDED"
            android:text="02:00"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAway"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/txtTime"
            android:src="@drawable/app_icon"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txtAwayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/imgArrowRight"
            android:layout_toRightOf="@id/imgAway"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Manchester City"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgArrowRight"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#F5F5F5">

        <TextView

            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:background="#73C338"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="Sắp diễn ra"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtHopeStar"
            android:layout_width="115dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cornerleftstar"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:text="x3 Điểm"
            android:textAlignment="textEnd"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/layoutHopeStar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="65dp"
            android:background="@drawable/cornerstar">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/starcolor" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>